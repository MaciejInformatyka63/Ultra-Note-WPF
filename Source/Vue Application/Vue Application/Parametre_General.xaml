<UserControl x:Class="Vue_Application.Parametre_General"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:Vue_Application"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Options d'affichage" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                    FontSize="12" FontWeight="Normal" FontFamily="Microsoft yahei"
                    Background="LightGray" Margin="5,10"/>
            <WrapPanel>
                <TextBlock Text="Couleur : " Margin="5,10" HorizontalAlignment="Left" FontSize="10"
                    FontFamily="Microsoft yahei"/>
                <ComboBox Width="55" Height="23" FontSize="10">
                    <ComboBoxItem IsSelected="False" Content="Rouge" Background="DarkSalmon"/>
                    <ComboBoxItem IsSelected="True" Content="Bleu" Background="#FF64BED8"/>
                </ComboBox>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
