<UserControl x:Class="Vue_Application.Parametre_General"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:Vue_Application"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top" Background="LightGray">
                <TextBlock Text="Paramètres Généraux" HorizontalAlignment="Center" VerticalAlignment="Top"
                        FontSize="14" FontWeight="ExtraBold" FontFamily="Microsoft yahei"
                        Margin="5,10" Padding="5,0"/>
            </Grid>
            <Grid DockPanel.Dock="Bottom">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Annuler" Grid.Column="1" Margin="0,15"/>
                    <Button Content="Confirmer" Grid.Column="2" Margin="15,15,20,15"/>
                </Grid>
            </Grid>
            <WrapPanel>
                <TextBlock Text="Définir un dossier d'enregistrement par défaut: " Margin="5,10" HorizontalAlignment="Left" FontSize="14"
                    FontFamily="Microsoft yahei"/>
                <Button Content="Choisir un dossier" Height="20"/>
            </WrapPanel>
        </DockPanel>
    </Grid>
</UserControl>
